{
    "manifest_version": 2,
    "name": "Cardmarket Notes",
    "version": "1.0",
  
    "description": "Add custom notes to Cardmarket sellers",
  
    "icons": {
      "48": "images/logo.png"
    },

    "browser_action": {
      "default_icon": {
        "32": "images/logo.png"
      },
      "default_popup": "manageNotes.html"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.cardmarket.com/*"],
        "js": ["showNotes.js"]
      }
    ]
  }
  